@model MvcKutuphane.Models.Entity.TBLKITAP
@{ViewBag.Title = "KitapGetir";
    Layout = "~/Views/Shared/Layout.cshtml";}

<html>
<head>
    <title>Kitap Güncelle</title>
    <style>
        .input {
            width: 400px;
        }

        .yataydiv {
            display: flex;
        }
    </style>
</head>
<body class="panel-group">
    <div class="panel panel-success">

        <h2 style="font-weight:bold ; margin-left: 350px; font-family: sans-serif">Kitabı Güncelle</h2>
        <div class="panel panel-body" >

            @using (Html.BeginForm("KitapGuncelle", "Kitap", FormMethod.Post))
            {
                <div style=" margin-bottom:15px"></div>
                <div class="form-group">

                    <div class="yataydiv">
                        <div style="padding:15px 15px">
                            <label>Kitap Adı</label>
                            <div class="input">
                                @Html.TextBoxFor(k => k.AD, new { @class = "form-control", @style = "background-color:#f1f1f1;" })
                            </div>
                        </div>
                        <div style="padding:15px 15px">
                            <label>Kategori</label>
                            <div class="input">
                                @Html.DropDownListFor(k => k.TBLKATEGORI.ID, (List<SelectListItem>)ViewBag.dgr1, new { @class = "form-control", @style = "background-color:#f1f1f1;" })
                            </div>
                        </div>
                    </div>

                    <div class="yataydiv">
                        <div style="padding:15px 15px">
                            <label>Yazarı</label>
                            <div class="input">
                                @Html.DropDownListFor(k => k.TBLYAZAR.ID, (List<SelectListItem>)ViewBag.dgr2, new { @class = "form-control", @style = "background-color:#f1f1f1;" })
                            </div>
                        </div>
                        <div style="padding:15px 15px">
                            <label>Basım Yılı</label>
                            <div class="input">
                                @Html.TextBoxFor(k => k.BASIMYIL, new { @class = "form-control", @style = "background-color:#f1f1f1;" })
                            </div>
                        </div>
                    </div>

                    <div class="yataydiv">
                        <div style="padding:15px 15px">
                            <label>Yayınevi</label>
                            <div class="input">
                                @Html.TextBoxFor(k => k.YAYINEVI, new { @class = "form-control", @style = "background-color:#f1f1f1;" })
                            </div>
                        </div>
                        <div style="padding:15px 15px">
                            <label>Sayfa Sayısı</label>
                            <div class="input">
                                @Html.TextBoxFor(k => k.SAYFA, new { @class = "form-control", @style = "background-color:#f1f1f1;" })
                            </div>
                        </div>
                    </div>

                    <div class="yataydiv">
                        <div style="padding:15px 15px">
                            <label>Kapak Fotoğraf Linki</label>
                            <div class="input">
                                @Html.TextBoxFor(k => k.KITAPRESIM, new { @class = "form-control", @style = "background-color:#f1f1f1;" })
                            </div>
                        </div>
                        <div style="padding:15px 15px">
                            <label>Açıklama</label>
                            <div class="input">
                                @Html.TextBoxFor(k => k.AÇIKLAMA, new { @class = "form-control", @style = "background-color:#f1f1f1;" })
                            </div>
                        </div>
                    </div>
                    @Html.HiddenFor(x => x.ID)
                    <div style="margin:15px 40% 0">

                        <input type="hidden" name="Durum" value="True" />
                        <button class="btn btn-warning">Kitap Bilgilerini Güncelle</button>
                    </div>
                </div>
            }
            </div>
        </div>

</body>
</html>