@model MvcKutuphane.Models.Entity.TBLKITAP
@{ViewBag.Title = "KitapEkle";
    Layout = "~/Views/Shared/Layout.cshtml";}
<html>
<head>
    <title>Kitap Ekle</title>
    <style>
        .input {
            width: 400px;
        }

        .yataydiv {
            display: flex;
        }
    </style>
</head>
<body class="panel-group">
    <div class="panel panel-success">

        <h2 style="font-weight:bold ; margin-left: 350px; font-family: sans-serif">Kitap Ekle</h2>
        <div class="panel panel-body">

            <form class="form-group" method="post">
                <div class="yataydiv">
                    <div style="padding:15px 15px">
                        <label>Kitap Adı</label>
                        <div class="input">
                            @Html.TextBoxFor(kitaplar => kitaplar.AD, new { @class = "form-control", @style = "background-color:#f1f1f1;" })
                        </div>
                    </div>
                    <div style="padding:15px 15px">
                        <label>Kategori</label>
                        <div class="input">

                            @Html.DropDownListFor(kitaplar => kitaplar.TBLKATEGORI.ID, (List<SelectListItem>)ViewBag.dgr1, new { @class = "form-control", @style = "background-color:#f1f1f1;" })
                        </div>
                    </div>
                </div>

                <div class="yataydiv">
                    <div style="padding:15px 15px">
                        <label>Yazar</label>
                        <div class="input">

                            @Html.DropDownListFor(kitaplar => kitaplar.TBLYAZAR.ID, (List<SelectListItem>)ViewBag.dgr2, new { @class = "form-control", @style = "background-color:#f1f1f1;" })
                        </div>
                    </div>
                    <div style="padding:15px 15px">
                        <label>Basım Yılı</label>
                        <div class="input">

                            @Html.TextBoxFor(kitaplar => kitaplar.BASIMYIL, new { @class = "form-control", @style = "background-color:#f1f1f1;" })
                            
                        </div>
                    </div>
                </div>
                <div class="yataydiv">

                    <div style="padding:15px 15px">
                        <label>Yayınevi</label>
                        <div class="input">

                            @Html.TextBoxFor(kitaplar => kitaplar.YAYINEVI, new { @class = "form-control", @style = "background-color:#f1f1f1;" })
                        </div>
                    </div>
                    <div style="padding:15px 15px">
                        <label>Sayfa Sayısı</label>
                        <div class="input">

                            @Html.TextBoxFor(kitaplar => kitaplar.SAYFA, new { @class = "form-control", @style = "background-color:#f1f1f1;" })
                        </div>
                    </div>
                </div>
                <div class="yataydiv">

                    <div style="padding:15px 15px">
                        <label>Kitap Resmi Linki</label>
                        <div class="input">
                            @Html.TextBoxFor(kitaplar => kitaplar.KITAPRESIM, new { @class = "form-control", @style = "background-color:#f1f1f1;" })
                            <p style="color:forestgreen">**Kitabın kapak resmini <a href="https://imgyukle.com/">buraya</a> yükleyerek .jpg uzantılı URL'yi buraya ekleyiniz..</p>
                        </div>
                    </div>
                    <div style="padding:15px 15px">
                        <label>Açıklama</label>
                        <div class="input">

                            @Html.TextBoxFor(kitaplar => kitaplar.AÇIKLAMA, new { @class = "form-control", @style = "background-color:#f1f1f1;" })
                        </div>
                    </div>
                </div>
                <div style="margin:15px 40% 0">
                    <button class="btn btn-info" id="Btn1">Kitap Ekle</button>
                </div>
            </form>
            </div>
        </div>
</body>
</html>