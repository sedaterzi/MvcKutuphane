@model MvcKutuphane.Models.Entity.TBLKATEGORI

@{ViewBag.Title = "KategoriEkle";
    Layout = "~/Views/Shared/Layout.cshtml";

}
<html>
<head>
    <title>Kategori Ekle</title>
    <style>
        .input {
            width: 400px;
        }

        .yataydiv {
            display: flex;
        }
    </style>
</head>
<body class="panel-group">
    <div style="margin-top:50px; height:50px;"></div>

    <div class="panel panel-success" style="width: 800px;margin-left:200px">

        <h2 style="font-weight:bold ; margin-left: 350px; font-family: sans-serif">Kategori Ekle</h2>
        <div class="panel panel-body" style="margin-left:225px">

            <form class="form-group" method="post">

                <div style="padding:15px 15px">
                    <label>Kategori Adı</label>
                    <div class="input">
                        @Html.TextBoxFor(ktg => ktg.AD, new { @class = "form-control", @style = "background-color:#f1f1f1;" })
                        @Html.ValidationMessageFor(ktg => ktg.AD, "", new { @Style = "color:red" })
                    </div>
                </div>

                <div style="padding:15px 15px">
                    <button class="btn btn-info" id="Btn1">Kategori Ekle</button>
                </div>

            </form>
        </div>
    </div>
</body>
</html>