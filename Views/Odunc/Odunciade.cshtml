@model MvcKutuphane.Models.Entity.TBLHAREKET
@{
    ViewBag.Title = "Odunciade";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<html>
<head>
    <title>Ödünç İadesi Al</title>
    <style>
        .input {
            width: 400px;
        }

        .yataydiv {
            display: flex;
        }
    </style>
</head>
<body class="panel-group">
    <div class="panel panel-success">
        <h2 style="font-weight:bold ; margin-left: 350px; font-family: sans-serif">Ödünç İade</h2>
        <div class="panel panel-body" style="margin-left:225px">
            @using (Html.BeginForm("OduncGuncelle", "Odunc", FormMethod.Post))
            {
                <div style="margin-bottom:15px"></div>
                <div class="form-group">
                    <div class="yataydiv">
                        <div style="padding:15px 15px">
                            <label>İşlem Numarası</label>
                            @Html.TextBoxFor(k => k.ID, new { @class = "form-control", @style = "background-color:#f1f1f1;" })
                        </div>
                        <br />
                        <div style="padding:15px 15px">
                            <label>Kitap Adı</label>
                            @Html.TextBoxFor(k => k.TBLKITAP.AD , new { @class = "form-control", @style = "background-color:#f1f1f1;" })
                        </div>
                        <br />
                    </div>
                    <div class="yataydiv">
                        <div style="padding:15px 15px">
                            <label>Üye</label>
                            @Html.TextBoxFor(k => k.TBLUYELER.AD, new { @class = "form-control", @style = "background-color:#f1f1f1;" })
                        </div>
                        <br />
                        <div style="padding:15px 15px">
                            <label>Personel</label>
                            @Html.TextBoxFor(k => k.TBLPERSONEL.PERSONEL, new { @class = "form-control", @style = "background-color:#f1f1f1;" })
                        </div>
                        <br />
                    </div>
                    <div class="yataydiv">
                        <div style="padding:15px 15px">
                            <label>Alış Tarihi</label>
                            @Html.TextBoxFor(k => k.ALISTARIH, "{0: dd.MM.yyyy}", new { @class = "form-control", @style = "background-color:#f1f1f1;" })
                        </div>
                        <br />
                        <div style="padding:15px 15px">
                            <label>İade Edilmesi Gereken Tarih</label>
                            @Html.TextBoxFor(k => k.IADETARIH, "{0: dd.MM.yyyy}", new { @class = "form-control", @style = "background-color:#f1f1f1;" })
                        </div>
                        <br />
                    </div>
                    <div class="yataydiv">
                        <div style="padding:15px 15px">
                            <label> İade Ediliş Tarihi</label>
                            <input style="background-color:#f1f1f1;" type="text" class="form-control" name="UYEGETIRTARIH" value="@DateTime.Now.ToShortDateString()" />
                        </div>
                        <br />
                        <div style="padding:15px 15px">
                            <label>Geç Gelen Gün Sayısı</label>
                            <input style="background-color:#f1f1f1;" type="text" class="form-control" id="Gecinput" value="@ViewBag.dgr" />
                        </div>
                    </div>
                </div>
                <div style="margin:15px 40% 0">
                    <button class="btn btn-group" id="Btn1" style=" background-color: #fba0b7;color: white">Ödünç Kitabı Geri Al</button>
                </div>

            }

        </div>
    </div>
</body>
</html>