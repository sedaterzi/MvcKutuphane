@model MvcKutuphane.Models.Entity.TBLHAREKET

@{
    ViewBag.Title = "OduncVer";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<html>
<head>
    <title>Ödünç Ver</title>
    <style>
        .input {
            width: 400px;
        }

        .yataydiv {
            display: flex;
        }
    </style>

</head>
<body class="panel panel-group">
    <div class="panel panel-success" >
        <h2 style="font-weight:bold ; margin-left: 350px; font-family: sans-serif">Ödünç Ver</h2>

        <div class="panel panel-body" style="margin-left:225px" >
            <form class="form-group" method="post">
                <div style="padding:15px 15px">
                    <label>Teslim Alacak Üye</label>
                    @*  @Html.TextBoxFor(k => k.UYE, new { @class = "form-control" })*@
                    <div class="input">
                        @Html.DropDownListFor(k => k.TBLUYELER.ID, (List<SelectListItem>)ViewBag.dgr1, new { @class = "form-control", @style = "background-color:#f1f1f1;" })
                        @Html.ValidationMessageFor(k => k.UYE, "", new { @Style = "color:red" })
                    </div>
                </div>

                <div style="padding:15px 15px">
                    <label>Ödünç Verilecek Kitap</label>
                    @*@Html.TextBoxFor(k => k.KITAP, new { @class = "form-control" })*@
                    <div class="input">
                        @Html.DropDownListFor(k => k.TBLKITAP.ID, (List<SelectListItem>)ViewBag.dgr2, new { @class = "form-control", @style = "background-color:#f1f1f1;" })
                        @Html.ValidationMessageFor(k => k.KITAP, "", new { @Style = "color:red" })
                    </div>

                </div>

                <div style="padding:15px 15px">
                    <label>Teslim Eden Personel</label>
                    @* @Html.TextBoxFor(k => k.PERSONEL, new { @class = "form-control" })*@
                    <div class="input">
                        @Html.DropDownListFor(k => k.TBLPERSONEL.ID, (List<SelectListItem>)ViewBag.dgr3, new { @class = "form-control", @style = "background-color:#f1f1f1;" })
                        @Html.ValidationMessageFor(k => k.PERSONEL, "", new { @Style = "color:red" })

                    </div>
                </div>

                <div style="padding:15px 15px">
                    <label>Kitap Alış Tarihi</label>
                    <div class="input">
                        <input style="background-color:#f1f1f1;" type="text" class="form-control" name="ALISTARIH" value="@DateTime.Now.ToShortDateString()" />
                    </div>
                </div>

                <div style="padding:15px 15px">
                    <label>Kitap İade Tarihi</label>
                    <div class="input">
                        <input style="background-color:#f1f1f1;" type="text" class="form-control" name="IADETARIH" value="@DateTime.Now.AddDays(15).ToShortDateString()" />
                    </div>
                </div>

                <div style="padding:15px 15px">
                    <button class="btn btn-group" id="Btn1" style="        background-color: #fba0b7;color: white">Kitabı Ödünç Ver</button>
                </div>
            </form>
        </div>
    </div>
    </body>
</html>