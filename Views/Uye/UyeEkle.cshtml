@model MvcKutuphane.Models.Entity.TBLUYELER

@{
    ViewBag.Title = "UyeEkle";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<html>
<head>
    <title>Üye Ekle</title>
    <style>
        .input {
            width: 400px;
        }

        .yataydiv {
            display: flex;
        }
    </style>
</head>
<body class="panel-group">
    <div style="margin-top:30px; height:50px;"></div>

    <div class="panel panel-success">

        <h2 style="font-weight:bold ; margin-left: 350px; font-family: sans-serif">Üye Ekle</h2>
        <div class="panel panel-body">

            <form class="form-group" method="post">

                <div class="yataydiv">
                    <div style="padding:15px 15px">
                        <label>Üye Adı</label>
                        <div class="input">
                            @Html.TextBoxFor(x => x.AD, new { @class = "form-control", @style = "background-color:#f1f1f1;" })
                            @Html.ValidationMessageFor(x => x.AD, "", new { @Style = "color:red" })
                        </div>
                    </div>

                    <div style="padding:15px 15px">
                        <label>Üye Soyadı</label>
                        <div class="input">
                            @Html.TextBoxFor(x => x.SOYAD, new { @class = "form-control", @style = "background-color:#f1f1f1;" })
                            @Html.ValidationMessageFor(x => x.SOYAD, "", new { @Style = "color:red" })
                        </div>
                    </div>
                </div>
                <div class="yataydiv">
                    <div style="padding:15px 15px">
                        <label>Mail Adresi</label>
                        <div class="input">
                            @Html.TextBoxFor(x => x.MAIL, new { @class = "form-control", @style = "background-color:#f1f1f1;" })
                            @Html.ValidationMessageFor(x => x.MAIL, "", new { @Style = "color:red" })
                        </div>
                    </div>

                    <div style="padding:15px 15px">
                        <label>Kullanıcı Adı</label>
                        <div class="input">
                            @Html.TextBoxFor(x => x.KULLANICIADI, new { @class = "form-control", @style = "background-color:#f1f1f1;" })
                            @Html.ValidationMessageFor(x => x.KULLANICIADI, "", new { @Style = "color:red" })
                        </div>
                    </div>
                </div>
                <div class="yataydiv">
                    <div style="padding:15px 15px">
                        <label>Şifre</label>
                        <div class="input">
                            @Html.TextBoxFor(x => x.SIFRE, new { @class = "form-control", @style = "background-color:#f1f1f1;" })
                            @Html.ValidationMessageFor(x => x.SIFRE, "", new { @Style = "color:red" })
                        </div>
                    </div>

                    <div style="padding:15px 15px">
                        <label>Fotoğraf Linki</label>
                        <div class="input">
                            @Html.TextBoxFor(x => x.FOTOGRAF, new { @class = "form-control", @style = "background-color:#f1f1f1;" })
                            @Html.ValidationMessageFor(x => x.FOTOGRAF, "", new { @Style = "color:red" })
                            <p style="color:forestgreen">**Kitabın kapak resmini <a href="https://imgyukle.com/">buraya</a> yükleyerek .jpg uzantılı URL'yi buraya ekleyiniz..</p>

                        </div>
                    </div>
                </div>
                <div class="yataydiv">
                    <div style="padding:15px 15px">
                        <label>Telefon</label>
                        <div class="input">
                            @Html.TextBoxFor(x => x.TELEFON, new { @class = "form-control", @style = "background-color:#f1f1f1;" })
                            @Html.ValidationMessageFor(x => x.TELEFON, "", new { @Style = "color:red" })
                        </div>
                    </div>

                    <div style="padding:15px 15px">
                        <label>Okul</label>
                        <div class="input">
                            @Html.TextBoxFor(x => x.OKUL, new { @class = "form-control", @style = "background-color:#f1f1f1;" })
                            @Html.ValidationMessageFor(x => x.OKUL, "", new { @Style = "color:red" })
                        </div>
                    </div>
                </div>
                <div style="margin:15px 40% 0">
                    <button class="btn btn-info" id="Btn1">Uye Ekle</button>
                </div>
            </form>
        </div>
    </div>
</body>
</html>
