@using MvcKutuphane.Models.Entity
@using PagedList
@using PagedList.Mvc
@model  List<TBLUYELER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<html>
<head>
   <title>Üyeler</title>
</head>
<body style="position:center">
    <h2 style="margin-top:15px; font-weight:bold ; margin-left: 350px; font-family: sans-serif"> Üyeler </h2>


    <table id="tbl1" class="table table-striped">
        <thead>
            <tr style="background-color:#AAAFFA">
                <th>ÜYE NUMARASI</th>
                <th>ÜYE ADI</th>
                <th>ÜYE SOYADI</th>
                <th>OKUL</th>

                <th>SİL</th>
                <th>GÜNCELLE</th>
                <th>KİTAP GEÇMİŞİ</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var uye in Model)
            {
                <tr>
                    <td>@uye.ID</td>
                    <td>@uye.AD</td>
                    <td>@uye.SOYAD</td>
                    <td>@uye.OKUL</td>

                    <td>
                        @Html.ActionLink("Sil", "UyeSil", new { id = uye.ID },
                   new { @class = "btn btn-danger", onClick = "return confirm('Silmek İstiyor musunuz?')" })
                    </td>
                    <td><a href="/Uye/UyeGetir/@uye.ID/" class="btn btn-success">Güncelle</a></td>
                    <td><a href="/Uye/UyeKitapGecmis/@uye.ID/" class="btn btn-success" style="background-color:lightcoral; color:white">Geçmiş</a></td>
                </tr>
            }
        </tbody>

    </table>


    <a href="/Uye/UyeEkle" class="btn btn-primary">Yeni Üye Ekle</a>
</body>
</html>
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<link href="~/Content/bootstrap.css" rel="stylesheet" />

<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>

<script>
    $('#tbl1').dataTable({
        language: {
            "url": "//cdn.datatables.net/plug-ins/1.10.22/i18n/Turkish.json"
        }
    });
</script>

