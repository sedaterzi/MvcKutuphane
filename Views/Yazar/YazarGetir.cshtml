@model MvcKutuphane.Models.Entity.TBLYAZAR
@{
    ViewBag.Title = "YazarGetir";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<html>
<head>
    <title>Yazar Güncelle</title>
    <style>
        .input {
            width: 400px;
        }

        .yataydiv {
            display: flex;
        }
    </style>
</head>
<body class="panel-group">
    <div class="panel panel-success">

        <h2 style="font-weight:bold ; margin-left: 350px; font-family: sans-serif">Yazar Güncelle</h2>
        <div class="panel panel-body" style="margin-left:225px">

            @using (Html.BeginForm("YazarGuncelle", "Yazar", FormMethod.Post))
            {
                <div style=" margin-bottom:15px"></div>
                <div class="form-group">

                    <div class="input">
                        <div style="padding:15px 15px">
                            <label>Yazar Adı</label>
                            @Html.TextBoxFor(y => y.AD, new { @class = "form-control", @style = "background-color:#f1f1f1;" })
                        </div>
                    </div>
                    <div class="input">
                        <div style="padding:15px 15px">
                            <label>Yazar Soyadı</label>
                            @Html.TextBoxFor(y => y.SOYAD, new { @class = "form-control", @style = "background-color:#f1f1f1;" })
                        </div>
                    </div>
                    <div class="input">
                        <div style="padding:15px 15px">
                            <label>Yazar Detay Bilgileri</label>
                            @Html.TextAreaFor(y => y.DETAY, new { @class = "form-control", @style = "background-color:#f1f1f1;" })
                        </div>
                    </div>
                    @Html.HiddenFor(x => x.ID)

                    <div style="margin-top:15px; margin-left:15px">
                        <button class="btn btn-warning">Yazar Bilgilerini Güncelle</button>
                    </div>
                </div>
            }
        </div>
    </div>
</body>
</html>

