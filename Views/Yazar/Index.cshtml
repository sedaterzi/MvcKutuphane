@using MvcKutuphane.Models.Entity;
@using PagedList
@using PagedList.Mvc
@model List<TBLYAZAR>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<html>
<head>
    <title>Yazarlar</title>
</head>
<body>
<h2 style="font-weight:bold ; margin-left: 350px; font-family: sans-serif">Yazarlar</h2>

<table id="tbl1" class="table table-striped">
    <thead>
        <tr style="background-color:#AAAFFA">
            <th>AD</th>
            <th>SOYAD</th>
            <th>SİL</th>
            <th>GÜNCELLE</th>
            <th>YAZARIN KİTAPLARI</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var y in Model)
        {
            <tr>
                <td>@y.AD</td>
                <td>@y.SOYAD</td>
                <td>
                    @Html.ActionLink("Sil", "YazarSil", new { id = y.ID }, new
                    {
                        @class = "btn btn-danger",
                   onClick = "return confirm('Silmek İstiyor musunuz?')"
                    })
                </td>
                <td><a href="/Yazar/YazarGetir/@y.ID" class="btn btn-warning">Güncelle</a></td>
                <td><a href="/Yazar/YazarKitaplar/@y.ID" class="btn btn-default" style="background-color:lightcoral; color:white">Kitaplar</a></td>
            </tr>
        }
    </tbody>
</table>
    </body>
</html>
<a class="btn btn-primary" href="/Yazar/YazarEkle/">Yeni Yazar Ekle</a>
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<link href="~/Content/bootstrap.css" rel="stylesheet" />

<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>

<script>
    $('#tbl1').dataTable({
        language: {
            "url": "//cdn.datatables.net/plug-ins/1.10.22/i18n/Turkish.json"
        }
    });
</script>


