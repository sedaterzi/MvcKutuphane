@model MvcKutuphane.Models.Entity.TBLDUYURULAR
@{
    ViewBag.Title = "DuyuruDetay";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<html>
<head>
    <title>Duyuru Detay</title>
    <style>
        .input {
            width: 400px;
        }

        .yataydiv {
            display: flex;
        }
    </style>
</head>
<body class="panel-group">
    <div class="panel panel-success">

        <h2 style="font-weight:bold ; margin-left: 350px; font-family: sans-serif">Detaylar</h2>
        <div class="panel panel-body" style="margin-left:225px">
            @using (Html.BeginForm("DuyuruGuncelle", "Duyuru", FormMethod.Post))
            {
                <div style="padding:15px 15px"></div>
                <div class="form-group">
                    <div style="padding:15px 15px">
                        <label>Duyuru Kategori</label>
                        <div class="input">
                            @Html.TextBoxFor(k => k.KATEGORI, new { @class = "form-control", @style = "background-color:#f1f1f1;" })
                        </div>
                    </div>
                    <br />
                    <div style="padding:15px 15px">
                        <label>Duyuru İçerik</label>
                        <div class="input">
                            @Html.TextAreaFor(k => k.ICERIK, new { @class = "form-control", @style = "background-color:#f1f1f1;" })
                        </div>
                    </div>
                    <br />
                    <div style="padding:15px 15px">
                        <label>Duyuru Tarih</label>
                        <div class="input">
                            @Html.TextBoxFor(k => k.TARIH, new { @class = "form-control", @style = "background-color:#f1f1f1;" })
                        </div>
                    </div>
                </div>
                @Html.HiddenFor(k => k.ID)

                <div style="padding:15px 15px">
                    <button class="btn btn-warning">Güncelle</button>
                </div>
            }
        </div>
    </div>
</body>
</html>

